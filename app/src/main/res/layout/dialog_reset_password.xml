<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="320px"
			  android:layout_height="wrap_content"
			  android:orientation="vertical"
			  android:background="@android:color/transparent"
              >

	<ImageView android:id="@+id/reset_del"
			   android:layout_width="40px"
			   android:layout_height="40px"
			   android:layout_gravity="right"
			   android:layout_marginTop="21px"
	           android:src="@drawable/icon_del"/>

	<LinearLayout
		android:layout_width="320px"
		android:layout_height="180px"
		android:orientation="vertical"
		android:gravity="center_horizontal"
		android:layout_marginTop="10px"
		android:background="@drawable/reset_bg">

		<TextView android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginTop="10px"
				  android:textSize="26px"
				  android:textColor="#333333"
				  android:text="重置密码"/>

		<TextView android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginTop="26px"
				  android:textSize="18px"
				  android:textColor="#333333"
				  android:text="您确定要重置密码吗?"/>

		<TextView
			android:id="@+id/reset_confirm"
			android:layout_width="214px"
			android:layout_height="52px"
			android:layout_marginTop="24px"
			android:gravity="center"
			android:background="@drawable/reset_btn_bg"
			android:textColor="@color/colorWhite"
			android:textSize="26px"
			android:text="确定"/>

	</LinearLayout>

</LinearLayout>
