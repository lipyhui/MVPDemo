<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_start_view"
    android:layout_width="match_parent"
    android:layout_height="46px"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_time"
            android:layout_width="212px"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:textSize="14px"
            android:textColor="@color/colorHomeTitle"
            tools:text="2017.06.09 15:28"/>

      <!--  <TextView
            android:id="@+id/item_level"
            android:layout_width="159px"
            android:layout_height="wrap_content"
            android:paddingLeft="19px"
            android:textSize="14px"
            android:textColor="@color/colorWarnR"
            tools:text="@string/warn_r"/>-->

        <TextView
            android:id="@+id/item_text"
            android:layout_width="212px"
            android:layout_marginLeft="47px"
            android:layout_marginRight="7px"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:textSize="14px"
            android:textColor="@color/colorHomeTitle"
            tools:text="@string/warn_p_h"/>

        <TextView
            android:id="@+id/item_time_remove"
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:textSize="14px"
            android:textColor="@color/colorHomeTitle"
            tools:text="2017.06.10 10:00"/>

    </LinearLayout>

</FrameLayout>